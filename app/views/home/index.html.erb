<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% unless user_signed_in? %>
      <ul>
       <%= link_to "Sign up", new_user_registration_path %> |
       <%= link_to "Sign in", new_user_session_path %>
       <%= link_to user_omniauth_authorize_path(:facebook), class:'btn-auth btn-facebook' do %>
          Sign in with <b>facebook</b>
        <% end %>
        <%= link_to user_omniauth_authorize_path(:twitter), class:'btn-auth btn-twitter' do %>
          Sign in with <b>twitter</b>
          <% end %>
        <%= link_to user_omniauth_authorize_path(:google_oauth2), class:'btn-auth btn-google' do %>
          Sign in with <b>Google</b>
        <% end %>
      </ul>
    <% end %>
    </div>
  </div>


  <h3>Recent Posts:</h3>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th class="col-md-3">Author</th>
        <th class="col-md-9">Title</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><center>
            <%= image_tag post.user.picture %><br>
            <%= post.user.name %></td>
          </center>
          <td><%= link_to post.title, post_path(post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  
