<!-- Post Modal -->
<div class="modal fade post" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Are you angry?</h4>
      </div>
      <div class="modal-body">
        <%= render partial:'modal_form', locals:{post:post, targets:targets} %>
      </div>
      <div class="modal-footer">
        <% if targets.empty? %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close!</button>
        <% else %>
          <button type="button" class="btn btn-primary troll">Troll!</button>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- Model End -->